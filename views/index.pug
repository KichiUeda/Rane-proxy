doctype html
html(lang='en')
    head
        script(src="https://unpkg.com/feather-icons")
        script(src="https://cdn.jsdelivr.net/npm/feather-icons/dist/feather.min.js")
        style
            include styles/reset.css
            include styles/index.css
            include styles/header.css
            include styles/nav.css
            include styles/footer.css
        meta(
            name="viewport" 
            content="width=device-width, initial-scale=1.0"
            )
    body
        // navbar
        include header.pug

        // store specific nav bar
        include store-nav.pug

        // image service
        div#images

        // price service
        div#price

        // system service
        div#Overview

        // desc service
        div#desc

        // related content service
        div#related

        // traits
        div#Traits

        // other games service
        div#other

        // footer
        include footer.pug

        script(src=descService)
        script(src=overviewService)
        script(src=traitsService)
        script(src=imageService)
        script.
            feather.replace()
        script(src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js")